@model IEnumerable<CityDto>

@{
    ViewData["Title"] = "City";
}

<div class="container">
    <div class="row pt-3">
        <div class="col md-6">
            <h1 class="text-secondary fw-bold">Cities</h1>
        </div>
        <div class="col md-6 text-end">
            <a asp-controller="Cities" asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-square"></i> Create
            </a>
        </div>
    </div>
    <hr>
    
    <div class="pt-3">
        <table style="width: 100%">
            <thead>
            <tr>
                <th style="width: 45%">@Html.DisplayNameFor(model => model.Name)</th>
                <th style="width: 35%">@Html.DisplayNameFor(model => model.Country.Name)</th>
                <th style="width: 20%">
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var city in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => city.Name)</td>
                    <td>@Html.DisplayFor(model => city.Country.Name)</td>
                    <td>
                        <div class="btn-group d-flex">
                            <a asp-controller="Cities" asp-action="Edit" asp-route-id="@city.Id" class="btn btn-info mx-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            @* <a href="#" onclick="deleteRecord(@author.Id)" class="btn btn-danger mx-2" style="width: 100px">Delete</a> *@
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>